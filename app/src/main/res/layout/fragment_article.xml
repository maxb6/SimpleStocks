<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="675dp">

    <TextView
        android:id="@+id/articleNameFragmentTV"
        android:layout_width="227dp"
        android:layout_height="53dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="Article Name"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/articleSourceFragmentTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/articleSourceFragmentTV"
        android:layout_width="225dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:text="Article Source"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/articleImageFragment"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/closeFragment"
        android:layout_width="44dp"
        android:layout_height="36dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="63dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toTopOf="@+id/articleImageFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/articleNameFragmentTV"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_close_24"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/articleTextFragmentTV"
        android:layout_width="301dp"
        android:layout_height="385dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="40dp"
        android:isScrollContainer="true"
        android:scrollbars="vertical"
        android:text="@string/market_cap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/articleImageFragment"
        android:layout_width="303dp"
        android:layout_height="98dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="23dp"
        android:src="@drawable/youtube_logo"
        app:layout_constraintBottom_toTopOf="@+id/articleTextFragmentTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>