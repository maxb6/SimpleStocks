<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="280dp"
    android:layout_marginBottom="4dp"
    android:background="@color/black"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="375dp"
        android:layout_height="270dp"
        android:layout_margin="4dp"
        android:background="@color/lightGrey">

        <TextView
            android:id="@+id/stockPriceTV2"
            android:layout_width="46dp"
            android:layout_height="29dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="2dp"
            android:elevation="10dp"
            android:text="Price"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/stockPriceTV"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pbTV"
            android:layout_width="87dp"
            android:layout_height="44dp"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="13dp"
            android:text="PB"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView7" />

        <TextView
            android:id="@+id/stockPriceTV"
            android:layout_width="120dp"
            android:layout_height="37dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="29dp"
            android:elevation="10dp"
            android:text="Price"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/pegButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="22dp"
            android:text="P/E"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/stockTickerTV"
            android:layout_width="127dp"
            android:layout_height="31dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="49dp"
            android:layout_marginBottom="26dp"
            android:elevation="10dp"
            android:text="Stock Ticker"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/stockPriceTV2"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="13dp"
            android:text="P/B"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/pbTV"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="22dp"
            android:text="Market Cap"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/videoTitleTV"
            android:layout_width="115dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="61dp"
            android:elevation="10dp"
            android:fontFamily="sans-serif"
            android:text="Stock Name"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/stockTickerTV"
            app:layout_constraintEnd_toStartOf="@+id/stockPriceTV2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/marketCapTV"
            android:layout_width="86dp"
            android:layout_height="44dp"
            android:layout_marginBottom="22dp"
            android:text="MC"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/peTV"
            app:layout_constraintStart_toEndOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="65dp"
            android:layout_height="27dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="40dp"
            android:text="Dividend"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/textView7"
            app:layout_constraintEnd_toStartOf="@+id/divTV" />

        <TextView
            android:id="@+id/pegTV"
            android:layout_width="84dp"
            android:layout_height="43dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="12dp"
            android:text="PEG"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/divButton"
            app:layout_constraintEnd_toEndOf="@+id/pegButton" />

        <TextView
            android:id="@+id/peTV"
            android:layout_width="88dp"
            android:layout_height="44dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="22dp"
            android:text="PE"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/pbTV"
            app:layout_constraintEnd_toStartOf="@+id/textView6" />

        <TextView
            android:id="@+id/divTV"
            android:layout_width="87dp"
            android:layout_height="31dp"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="24dp"
            android:text="DIV"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/ocfButton"
            app:layout_constraintStart_toStartOf="@+id/divButton" />

        <TextView
            android:id="@+id/ocfTV"
            android:layout_width="84dp"
            android:layout_height="42dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="15dp"
            android:text="OCF"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="66dp"
            android:layout_height="43dp"
            android:layout_marginBottom="23dp"
            android:text="PEG"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/textView6"
            app:layout_constraintEnd_toStartOf="@+id/pegTV" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="77dp"
            android:layout_height="40dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="16dp"
            android:text="Operating Cash Flow"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ocfTV" />

        <Button
            android:id="@+id/mcButton"
            android:layout_width="194dp"
            android:layout_height="66dp"
            android:layout_marginTop="17dp"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/peButton"
            app:layout_constraintEnd_toStartOf="@+id/pegButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stockTickerTV" />

        <Button
            android:id="@+id/peButton"
            android:layout_width="192dp"
            android:layout_height="66dp"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintBottom_toTopOf="@+id/pbButton"
            app:layout_constraintEnd_toStartOf="@+id/divButton" />

        <Button
            android:id="@+id/pbButton"
            android:layout_width="192dp"
            android:layout_height="66dp"
            android:layout_marginBottom="1dp"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ocfButton" />

        <Button
            android:id="@+id/ocfButton"
            android:layout_width="192dp"
            android:layout_height="66dp"
            android:layout_marginBottom="1dp"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/divButton"
            android:layout_width="192dp"
            android:layout_height="66dp"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintBottom_toTopOf="@+id/ocfButton"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/pegButton"
            android:layout_width="192dp"
            android:layout_height="66dp"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintBottom_toTopOf="@+id/divButton"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/divider5"
            android:layout_width="394dp"
            android:layout_height="67dp"
            android:background="@color/stock_green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.545"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>